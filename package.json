{
  "name": "piyathon-vscode",
  "displayName": "Piyathon",
  "description": "Piyathon language support",
  "version": "0.0.1",
  "publisher": "piyawish",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/piyawish/piyathon-vscode.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "extensionDependencies": [
    "ms-python.python"
  ],
  "contributes": {
    "languages": [
      {
        "id": "piyathon",
        "aliases": [
          "Piyathon",
          "piyathon"
        ],
        "extensions": [
          ".pi"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "piyathon",
        "scopeName": "source.piyathon",
        "path": "./syntaxes/piyathon.tmLanguage.json"
      },
      {
        "scopeName": "source.regexp.piyathon",
        "path": "./syntaxes/regexp.tmLanguage.json"
      }
    ]
  },
  "main": "./extension.js",
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest",
    "test:integration": "node ./test/runTest.js",
    "vsce": "vsce",
    "watch": "tsc -watch -p ./",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/node": "22.x",
    "@types/mocha": "^10.0.1",
    "@types/jest": "^29.5.0",
    "eslint": "^9.13.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "jest": "^29.0.0",
    "mocha": "^10.2.0",
    "glob": "^10.3.10"
  }
}